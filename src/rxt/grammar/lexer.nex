
<                     { if !state.started { state.started = true; if retVal(emitObj("CTX", state.rootEnv)) != 0 { return } } }
/[#].*\n/             { /* eat up comments */ }
/,[ \n\t]*/           { if retVal(emitStr("PNC", token()[:1])) != 0 { return } }
/[\n][ \t\n]*/        { indent( token() ); if retVal(emitInd()) != 0 { return } }
/[ \t]+/              { /* eat up whitespace */ }
/DATASET|FOR SERVICE|FOR STACK|DEFINE AUTH|AS|SET|TO|GET|POST|FROM|EXTRACT USING|METRIC|NAME|TYPE|GAUGE|COUNTER|HISTOGRAM|SUMMARY|DESCRIPTION|LABELS/ { if retVal(emitStr("KEY", token())) != 0 { return } }
/"[^"]*"/             { if retVal(emitStr("STR", token())) != 0 { return } }
/'[^']*'/             { if retVal(emitStr("STR", token())) != 0 { return } }
/[a-z_][a-z0-9_]*/    { if retVal(emitStr("VAR", token())) != 0 { return } }
